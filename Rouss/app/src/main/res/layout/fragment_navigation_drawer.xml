<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_dark"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/profile_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!--<ImageView-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:padding="10dp"-->
        <!--android:src="@drawable/config_cog" />-->
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background_medium"
        android:clickable="true"
        android:gravity="center_vertical|left"
        android:padding="10dp"
        android:singleLine="true"
        android:text="Rouss"
        android:textColor="@color/gray_text"
        android:textSize="16sp" />

    <sempait.rouss.Utils.NavigationMenuItem
        android:id="@+id/invited_events_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Jugar" />

    <sempait.rouss.Utils.NavigationMenuItem
        android:id="@+id/all_events_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Mis premios" />

    <sempait.rouss.Utils.NavigationMenuItem
        android:id="@+id/acerca_de_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Acerca de" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesiÃ³n"
        android:textAlignment="center"
        android:padding="20dp"
        android:paddingTop="60dp"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone" />


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sonido"
        android:textAlignment="center"
        android:padding="20dp"
        android:paddingTop="60dp"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />


</LinearLayout>
