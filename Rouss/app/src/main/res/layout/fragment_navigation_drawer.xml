<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_dark"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/profile_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_background_medium"
            android:clickable="true"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:height="0dp"
            android:layout_weight="1"
            android:text="Rouss"
            android:paddingLeft="20dp"

            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <sempait.rouss.Utils.NavigationMenuItem
            android:id="@+id/invited_events_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical|left"
            android:height="0dp"
            android:layout_weight="2"
            android:paddingLeft="20dp"
            android:text="Jugar" />

        <sempait.rouss.Utils.NavigationMenuItem
            android:id="@+id/all_events_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical|left"
            android:height="0dp"
            android:layout_weight="2"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Mi perfil" />


        <Switch
            android:id="@+id/switchSonido"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:text="Sonido"
            android:height="0dp"
            android:checked="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesiÃ³n"
            android:textAlignment="center"
            android:padding="20dp"
            android:height="0dp"
            android:layout_weight="1"
            android:paddingTop="60dp"
            android:textColor="@color/white"
            android:layout_margin="30dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"></View>


    </LinearLayout>


</LinearLayout>
